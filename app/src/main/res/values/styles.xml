<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">casual</item>
    </style>

    <style name="ToolbarTextStyle">
        <item name="android:fontFamily">casual</item>
        <item name="android:textSize">@dimen/toolbar_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CoinSymbolStyle">
        <item name="android:textSize">@dimen/coin_symbol_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/symbolColor</item>
    </style>

    <style name="CoinNameStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/coin_name_text_size</item>
    </style>

    <style name="CoinDataInfoStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/price_text_size</item>
    </style>

    <style name="DividerStyle">
        <item name="android:background">@color/dividerColor</item>
    </style>

</resources>
